.side-bar
  .header
    %h1.header__name
      = current_user.name
    %ul.user-menu
      %li.list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', data: {"turbolinks" => false}, class: 'icon'
      %li.list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', data: {"turbolinks" => false}, class: 'icon'
  .groups
    - current_user.groups.each do |group|
      .group
        .group__name
          %p.group__name
        .group__message
          %p.group__message
          = link_to group_messages_path(group) do
            .group__name
              = group.name
            .group__message
              = group.show_last_message